---
import DoubleSwitch from "../components/DoubleSwitch.astro";
import Parameter from "../components/Parameter.astro";
import Select from "../components/Select.astro";
import TwoButtons from "../components/TwoButtons.astro";
import Layout from "../layout.astro";
---

<Layout>
    <div class="mpp-calculator-delivery">
        <h3>Уточнить срок и стоимость доставки</h3>
        <DoubleSwitch />
        <Select
            name="region"
            options={[
                "React",
                "Vue",
                "Laravel",
                "Strapi"
            ]}
        />
        <TwoButtons />
        <div class="mpp-amounts">
            <Parameter title="Срок доставки" value="1-2 дня" />
            <Parameter title="Стоимость доставки" value="170 ₽" />
        </div>
    </div>

</Layout>

<style>
    .mpp-calculator-delivery {
        width: 400px;
        display: flex;
        flex-direction: column;
        gap: 1rem;

    }

    .mpp-amounts {
        margin: 1rem 0 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
</style>